{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "composite": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "node",
      "vitest/globals",
      "@cloudflare/workers-types",
      "@cloudflare/vitest-pool-workers",
      "@cloudflare/workers-types/experimental"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@cs/utils": [
        "../utils/src"
      ],
      "@cs/utils/*": [
        "../utils/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist"
  ],
  "references": [
    {
      "path": "../utils"
    }
  ]
}
